<block wx:if="{{store.images}}">
    <swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="{{5000}}" duration="{{1000}}">
        <block wx:for="{{store.images}}">
            <swiper-item>
                <image src="{{item}}" data-url="{{item}}" class="slide-image" mode="aspectFit" bindtap="tapImage" />
            </swiper-item>
        </block>
    </swiper>
</block>

<view>
    <view class="address">
        想法:</view>
    <view class="notes">
        {{store.notes}}</view>
</view>


<block wx:if="{{isAdmin}}">
    <button class='button copy_path' bindtap='navigate'>导航</button>
    <button class='button delete_item' bindtap='deleteItem'>删除</button>
</block>
<block wx:else>
    <view class="navigateBox">
        <button class='button navigate' bindtap='navigate'>导航</button>
    </view>
</block>